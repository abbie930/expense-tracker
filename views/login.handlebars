<div class="d-flex flex-column align-items-center mt-5">
  <div class="card card-body" style="width:450px">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}

      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="my-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
        </div>
    

    <!-- Submit button -->
    <div class="text-center">
      <button type="submit" class="btn btn-primary btn-block mt-3" style="width:400px">Sign in</button>
    </div>

    <!-- Register buttons -->
    <div class="text-center mt-5">
      <p>No Account? <a href="/users/register">Register</a></p>
      <p>or sign in with:</p>
      <a href="/auth/facebook"><i class="fa-brands fa-facebook fa-2x text-info"></i></a>
    </div>
  </form>

  </div>  
</div>