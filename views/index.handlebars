
<div class="d-flex flex-column align-items-center mt-5">
{{!-- category --}}
  <div class="category-group input-group" style="width:400px">
    <select class="form-select" name="sort" id="sort" aria-label="Default select example">
    <option selected>類別</option>
    <option value="home">家居物業</option>
    <option value="transport">交通出行</option>
    <option value="leisure">休閒娛樂</option>
    <option value="food">餐飲食品</option>
    <option value="other">其他</option>
  </select>
  </div>

{{!-- amount --}}
  <div class="total-amount d-flex flex-column align-items-center m-5">
    <h3>總金額</h3>
    <h1 class="total-amount">$50000</h1>
  </div>


{{!-- expenseList --}}
  <ul class="expense-list list-group list-group-light" style="width: 600px">
    {{#each records}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <h1 class="expense-category-icon"><i class="{{this.categoryId.icon}}"></i></h1>
        <div class="ms-3">
          <h4 class="expense-name fw-bold mb-1">{{this.name}}</h4>
          <p class="expense-date text-muted mb-0">{{this.date}}</p>
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <h4 class="expense-name fw-bold align-self-center me-5">${{this.amount}}</h4>
        <a href="/records/{{this._id}}/edit"><button type="button" class="btn btn-dark"><i class="fa-solid fa-pen-to-square"></i></button></a>
        <form action="/records/{{this._id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-dark mx-2"><i class="fa-regular fa-trash-can"></i></button>
        </form>
      </div>
    </li>
    {{/each}}
  </ul>
  <div>
    <a href="/records/new" class="btn btn-lg btn-primary mt-5"><i class="fa-solid fa-circle-plus me-2"></i>新增支出</a>
  </div>
</div>
