
<div class="d-flex flex-column align-items-center mt-5">
  <h4>請修改你的支出</h4>

  <ul class="record-list list-group list-group-light mt-5" style="width: 600px">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div class="container record-form mt-2">
         <form action="/records/{{ record._id }}?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="name" class="col-form-label col-form-label-lg mt-4">名稱<span class="text-danger">*</span></label>
            <input type="text" class="form-control form-control-lg" name="name" id="name" placeholder="午餐" aria-label="default input example" value="{{ record.name }}">
          </div>

        <div class="mb-3">
          <label for="date" class="col-2 col-form-label">日期<span class="text-danger">*</span></label>
          <input type="text" name="date" id="date" class="form-control form-control-lg" onfocus="(this.type='date')" value={{record.date}}
          min="2023-01-01" max="2050-01-01" required>
        </div>

      <div class="mb-3">
        <label for="categoryId" class="col-form-label col-form-label-lg mt-4">類別<span class="text-danger">*</span></label>
        <select class="form-select" name="categoryId" id="categoryId" placeholder="2023/02/14" aria-label="Default select example" required>
         {{#each categories}}
            <option value="{{this._id}}" {{#ifSelect this._id ../record.categoryId}}selected{{/ifSelect}}>{{this.name}}</option>
         {{/each}}
        </select>
      </div>
 
      <div class="mb-3">
        <label for="amount" class="col-form-label col-form-label-lg mt-4">金額<span class="text-danger">*</span></label>
        <input type="number" class="form-control form-control-lg" name="amount" id="amount" min="0" placeholder="$100" aria-label="default input example" value="{{ record.amount }}" required>
      </div>
  
      <div class="text-center my-3">
        <button type="submit" class="btn btn-major">
          <i class="fa-solid fa-circle-check me-2"></i>Save
        </button>
        <a href="/" class="btn btn-major"><i class="fa-solid fa-house"></i>
        </button></a>
      </div>
      </form>
    </div>
  </ul>
</div>
